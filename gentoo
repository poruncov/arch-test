#!/bin/bash
mkfs.ext4 /dev/sda1 -L root
mkswap /dev/sda2
swapon /dev/sda2
mount /dev/sda1 /mnt/gentoo
cd /mnt/gentoo
wget http://distfiles.gentoo.org/releases/amd64/autobuilds/current-stage4-amd64-minimal/stage4-amd64-minimal-20200315T214502Z.tar.xz
tar xpvf stage4-amd64-minimal-20200315T214502Z.tar.xz --xattrs-include='*.*' --numeric-owner
cp --dereference /etc/resolv.conf /mnt/gentoo/etc/
mount --types proc /proc /mnt/gentoo/proc
mount --rbind /sys /mnt/gentoo/sys
mount --make-rslave /mnt/gentoo/sys
mount --rbind /dev /mnt/gentoo/dev
mount --make-rslave /mnt/gentoo/dev
