#!/bin/bash
mkfs.ext2 /dev/sdb1 -L boot
mkfs.ext4 /dev/sdb2 -L root
swapon /dev/sda4
mount /dev/sdb2 /mnt/gentoo
cd /mnt/gentoo
wget https://bouncer.gentoo.org/fetch/root/all/releases/amd64/autobuilds/20200315T214502Z/stage3-amd64-20200315T214502Z.tar.xz
tar xpvf stage3-amd64-20200315T214502Z.tar.xz --xattrs-include='*.*' --numeric-owner
mount --types proc /proc /mnt/gentoo/proc
mount --rbind /sys /mnt/gentoo/sys
mount --make-rslave /mnt/gentoo/sys
mount --rbind /dev /mnt/gentoo/dev
mount --make-rslave /mnt/gentoo/dev
